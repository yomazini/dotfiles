#!/bin/bash
NOTES_DIR="/home/$USER/notes"

echo "üß† Syncing Second Brain..."
cd "$NOTES_DIR" || exit

# 1. Pull latest changes from Cloud (School/Laptop)
echo "‚¨áÔ∏è  Pulling updates..."
git pull --rebase origin main

# 2. Add local changes
git add .

# 3. Commit (if changes exist)
if git diff-index --quiet HEAD --; then
    echo "‚úÖ No local changes to save."
else
    TIMESTAMP=$(date "+%Y-%m-%d %H:%M")
    git commit -m "Brain dump: $TIMESTAMP"
    echo "üì∏ Changes committed."
fi

# 4. Push to Cloud
echo "‚¨ÜÔ∏è  Pushing to GitHub..."
git push origin main

echo "‚ú® Done."
